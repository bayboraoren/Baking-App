<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadingProgressView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ProgressBar
      style="?android:attr/progressBarStyle"
      android:layout_width="@dimen/progress_bar_dimen"
      android:layout_height="@dimen/progress_bar_dimen"
      android:id="@+id/progressBar"
      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
  <TextView
      android:text="@string/loading_recipes"
      android:layout_width="wrap_content"
      android:gravity="center"
      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
      android:layout_height="wrap_content" android:id="@+id/loadingTextView"
      android:layout_marginTop="@dimen/margin_small"
      app:layout_constraintTop_toBottomOf="@+id/progressBar"/>
</android.support.constraint.ConstraintLayout>